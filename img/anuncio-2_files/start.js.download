function chamaSenha(){
	$('form.login').slideToggle();
	$('form.senha').slideToggle();
}

function chamaVotacao($x){
	$data = $('form.enquete'+$x).serialize();
	
	$.ajax({
		url: '/player/ajax/respondeenquete',
		type: 'POST',
		data: $data,
		dataType: "json",
		success: function($returndata)
		{
			$('form.enquete'+$x+' > div.enquete').addClass('bounceOut');
			$('form.enquete'+$x+' > div.enquete').hide('bounceOut');
			$('form.enquete'+$x+' > div.resposta').show();
			$('form.enquete'+$x+' > div.resposta').addClass('bounceIn');
		}
	});

}


