function getJson() {

    $.ajax({	
        cache: true,
        dataType : "json",
		url: '//players.gc2.com.br/cron/89fm/results.json?_=' + Date.now().toString().substring(0, 9),
		success: function(data) {
		console.log(data);
		  var string  ='';
			for($i = 0; $i < 3; $i++){
				
	            var singer = data.musicas.jatocou[$i].singer;
	            var song = data.musicas.jatocou[$i].song;

	            console.log(singer); 

	            if(singer || song){
	            	string = string + singer + " - " + song+ " <br />";
	            }
			}
			if(string){
				$("div.tocou > p").html(string);
			}else{
				$("div.tocou > p").html('Sem histórico ');
			}

			console.log(data);

            var song = data.musicas.tocando.song;
            var singer = data.musicas.tocando.singer;
            var cover = data.musicas.tocando.cover;
            var bio = data.musicas.tocando.bio;
            var letra = data.musicas.tocando.letra;
            var background = data.musicas.tocando.covermega;
            //var urlF = "http://www.facebook.com/sharer.php?s=100&p[title]=Estou ouvindo"+song+" - "+singer+"&p[url]=http://player.radiorock.com.br&p[summary]=&p[images][0]="+ cover;

            $("div#tocando > div.minimo > div.capa").css("background-image", "url("+cover+") ");
            
            $('div#tocando > div.minimo > div.descricao > h3').text(singer);
            $('div#tocando > div.minimo > div.descricao > h2').text(song);
            
            //$(' div#conteudo > div.minimo > div.coluna_esquerda > div.letra .mCSB_inside>.mCSB_container').html(letra);
            $(' div#letra > div.minimo > div.dois-tercos > p').html(letra);
            
            $(".letra").mCustomScrollbar({'theme':'dark-3'});
            
            $('  div#bio > div.minimo > div.dois-tercos > p').html(bio);
            $(".texto").mCustomScrollbar({'theme':'dark-3'});
            $('div#topo').css("background-image", "url("+background+") ");
        }
    });
    
    
}


getJson();
window.setInterval(function() {
    getJson();
}, 25000);	

