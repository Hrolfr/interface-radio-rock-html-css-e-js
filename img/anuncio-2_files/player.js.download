function playAndPause($x){
	if($x == 'play'){
		$("a.pause").show();
	    $("a.play").hide();
	    $("#jplayer_N").jPlayer("play");
	}else if($x == 'pause'){
		$("a.play").show();
	    $("a.pause").hide();
	    $("#jplayer_N").jPlayer("pause");
	}
}

function setVolume($x){
	if($x == 'volume_true'){
		$("a.volume_false").show();
	    $("a.volume_true").hide();
	    $("#jplayer_N").jPlayer("play");
	}else if($x == 'volume_false'){
		$("a.volume_true").show();
	    $("a.volume_false").hide();
	    $("#jplayer_N").jPlayer("pause");
	}
}

